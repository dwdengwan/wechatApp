<!--miniprogram/pages/found/test/mediaComponents/camera/camera.wxml-->
<view class="camera all">
  <back-header></back-header>
  <view class="camera-content content">
    <camera device-position="back" flash="off" binderror="error" style="width: 100%; height: 300px;"></camera>
    <button type="primary" bindtap="takePhoto" style="margin:2% 0;">拍照</button>
    <view class="text-info">预览</view>
    <image mode="widthFix" src="{{src}}"></image>
  </view>
  <view class="camera-footer footer"></view>
</view>
