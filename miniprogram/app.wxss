/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
page{
  width: 100%;
  height: 100%;
  background: #fff;
  font-size:25rpx;
}
view,text,input,button{
  margin: 0;
  padding:0;
}
.all{
  width: 100%;
  height: 100%;
  background: #fff;
}
.header{
  width: 96%;
  height: 6%;
  background: #eee;
  padding: 0 2%;
}
.content{
  width: 96%;
  height: 84%;
  background: #fff;
  padding: 0 2%;
  overflow-y: auto;
}
.footer{
  width: 96%;
  height: 10%;
  background: #eee;
  padding: 0 2%;
}
/*隐藏滚动条*/
.content::-webkit-scrollbar {
  display: none;
}
.text-info{
  padding: 2%;
  background: #27e38b;
  border-radius: 10rpx;
  color:#fff;
  margin: 2% 0;
  width: 96%;
}